<td align="right">,A	<%= ku.select  :kenchiku,[["あり○","0"],["ぜひ◎","◎"],["1名","1"],["2名","2"],["3名","3"],["４名",4],["５名",5],["６名",6],["７名",7],["８名",8],["９名",9],["10名",10],["11名",11],["12名",12]],{:include_blank =>""}%></td>
<td align="right">,I	<%= ku.select  :joho,[["あり○","0"],["ぜひ◎","◎"],["1名","1"],["2名","2"],["3名","3"],["４名",4],["５名",5],["６名",6],["７名",7],["８名",8],["９名",9],["10名",10],["11名",11],["12名",12]],{:include_blank =>""}%></td>
<td align="right">計 <%= ku.select  'kei',[["１名",1],["２名",2],["３名",3],["４名",4],["５名",5],["６名",6],["７名",7],["８名",8],["９名",9],["10名",10],["11名",11],["12名",12],["16名",16]] %></p></td>
<td align="right">5．求人数	<%= ku.text_field  'kyujin_sosu',:size=>"2"  %></td>
